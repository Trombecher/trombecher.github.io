---
import Page from "@/comp/Page.astro";

import {Image} from "astro:assets";

import ytIcon from "@/images/yt.png";
import igIcon from "@/images/ig.png";
import meImage from "@/images/me.jpg";
import LinkFollow from "../comp/LinkFollow.astro";
import TreesPicture from "../images/trees.webp";
---

<Page title="Tobias Hillemanns Home">
    <section class="flex max-sm:flex-col items-center mt-16 justify-center sm:gap-4 gap-8">
        <Image
            src={meImage}
            alt="Tobias Hillemanns"
            width={160}
            height={160}
            class="rounded-full"
            loading="eager"
            decoding="auto"
            format="avif"
            quality={100}
            densities={[1, 2, 3, 4, 5]}
        />
        <div>
            <h1 class="text-5xl font-bold tracking-tight px-6 max-sm:text-center">Hi, I'm Tobias</h1>
            <p class="mt-2 text-xl px-6 max-sm:text-center">
                Developer and artist
            </p>
            <p class="max-sm:text-center px-6 mt-3">
                <a href="https://maps.app.goo.gl/Fu9gkpjvVfUnFo1c9"
                   class="bg-blue px-3 py-1 text-sm text-white rounded-full">üìç Germany</a>
            </p>

            <div class="mt-6 flex select-none px-6 max-sm:justify-center">
                <a
                    href="/rss.xml/"
                    class="w-9 h-9 hover:bg-shade-100 flex items-center justify-center trasition rounded-xl"
                    title="RSS Feed"
                >
                    <svg viewBox="0 0 24 24" width="24" height="24">
                        <rect x="0" y="0" width="24" height="24" fill="#F47A24" rx="6"/>
                        <path fill="#fff"
                              d="M6 20A1 1 0 006 16 1 1 0 006 20M14 20A10 10 0 004 10V13A7 7 0 0111 20ZM20 20A16 16 0 004 4V7A13 13 0 0117 20"/>
                    </svg>
                </a>
                <a class="w-9 h-9 hover:bg-shade-100 flex items-center justify-center trasition rounded-xl"
                   href="https://www.youtube.com/@Trombecher" title="YouTube">
                    <Image
                        src={ytIcon}
                        alt="YouTube Icon"
                        width="24"
                        height="11.25"
                        format="webp"
                        densities={[1, 2, 3, 4, 5]}
                    />
                </a>
                <a class="w-9 h-9 hover:bg-shade-100 flex items-center justify-center trasition rounded-xl"
                   href="https://github.com/trombecher" title="GitHub">
                    <svg viewBox="0 0 98 96" width="24" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" clip-rule="evenodd"
                              d="M48.854 0C21.839 0 0 22 0 49.217c0 21.756 13.993 40.172 33.405 46.69 2.427.49 3.316-1.059 3.316-2.362 0-1.141-.08-5.052-.08-9.127-13.59 2.934-16.42-5.867-16.42-5.867-2.184-5.704-5.42-7.17-5.42-7.17-4.448-3.015.324-3.015.324-3.015 4.934.326 7.523 5.052 7.523 5.052 4.367 7.496 11.404 5.378 14.235 4.074.404-3.178 1.699-5.378 3.074-6.6-10.839-1.141-22.243-5.378-22.243-24.283 0-5.378 1.94-9.778 5.014-13.2-.485-1.222-2.184-6.275.486-13.038 0 0 4.125-1.304 13.426 5.052a46.97 46.97 0 0 1 12.214-1.63c4.125 0 8.33.571 12.213 1.63 9.302-6.356 13.427-5.052 13.427-5.052 2.67 6.763.97 11.816.485 13.038 3.155 3.422 5.015 7.822 5.015 13.2 0 18.905-11.404 23.06-22.324 24.283 1.78 1.548 3.316 4.481 3.316 9.126 0 6.6-.08 11.897-.08 13.526 0 1.304.89 2.853 3.316 2.364 19.412-6.52 33.405-24.935 33.405-46.691C97.707 22 75.788 0 48.854 0z"
                              fill="rgb(var(--black))"/>
                    </svg>
                </a>
                <a class="w-9 h-9 hover:bg-shade-100 flex items-center justify-center trasition rounded-xl"
                   href="https://www.instagram.com/Trombecher" title="Instagram">
                    <Image
                        src={igIcon}
                        alt="Instagram Icon"
                        width="24"
                        height="24"
                        format="webp"
                        densities={[1, 2, 3, 4, 5]}
                    />
                </a>
                <a class="w-9 h-9 hover:bg-shade-100 flex items-center justify-center trasition rounded-xl"
                   href="https://x.com/trombecher" title="ùïè">
                    <svg width="24" viewBox="0 0 1200 1227" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path
                            d="M714.163 519.284L1160.89 0H1055.03L667.137 450.887L357.328 0H0L468.492 681.821L0 1226.37H105.866L515.491 750.218L842.672 1226.37H1200L714.137 519.284H714.163ZM569.165 687.828L521.697 619.934L144.011 79.6944H306.615L611.412 515.685L658.88 583.579L1055.08 1150.3H892.476L569.165 687.854V687.828Z"
                            class="fill-black"/>
                    </svg>
                </a>
                <a
                    class="w-9 h-9 hover:bg-shade-100 flex items-center justify-center trasition rounded-xl"
                    href="https://bsky.app/profile/trombecher.bsky.social"
                    title="Bluesky"
                >
                    <svg fill="none" viewBox="0 0 64 64" width="24" height="24">
                        <path fill="#0085ff"
                              d="M13.873 7.305C21.21 12.832 29.103 24.037 32 30.05v15.882c0-.338-.13.044-.41.867-1.512 4.456-7.418 21.847-20.923 7.944-7.111-7.32-3.819-14.64 9.125-16.85-7.405 1.264-15.73-.825-18.014-9.015C1.12 26.522 0 12.01 0 10.05 0 .232 8.579 3.318 13.873 7.305ZM50.127 7.305C42.79 12.832 34.897 24.037 32 30.05v15.882c0-.338.13.044.41.867 1.512 4.456 7.418 21.847 20.923 7.944 7.111-7.32 3.819-14.64-9.125-16.85 7.405 1.264 15.73-.825 18.014-9.015C62.88 26.522 64 12.01 64 10.05c0-9.818-8.578-6.732-13.873-2.745Z"/>
                    </svg>
                </a>
            </div>
        </div>
    </section>
    <section class="mt-24 p-6 gap-6 grid max-xs:grid-cols-2 grid-cols-4 auto-rows-[5rem] *:rounded-3xl">
        <a
            href="/articles/"
            class="p-6 group transition hover:bg-shade-100 relative block col-span-2 bg-shade-50 font-semibold text-2xl"
        >
            Articles
            <LinkFollow/>
        </a>
        <a
            href="https://github.com/Trombecher/allc"
            class="p-6 group relative bg-[#291651] col-span-2 row-span-2 text-white"
        >
            <h3 class="font-bold text-4xl mb-2 text-white">Allc</h3>
            <p class="text-shade-200 text-lg">A color management library written in TypeScript</p>
            <LinkFollow/>
        </a>
        <a
            class="p-6 group block col-span-2 row-span-2 bg-[#000] relative"
            href="/effective-images-for-the-web/"
        >
            <h3 class="font-bold text-4xl mb-2 text-white">Effective Images For The Web</h3>
            <LinkFollow/>
        </a>
        <a
            href="/tools/"
            class="p-6 group transition hover:bg-shade-100 group col-span-2 bg-shade-50 relative block text-2xl font-semibold"
        >
            Tools
            <LinkFollow/>
        </a>
        <a href="/art/" class="block row-span-2 overflow-hidden bg-red">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 12 40">
                <path class="fill-yellow"
                      d="M0 6H6V0H0V6M3 5A1 1 0 013 1 1 1 0 013 5M6 3Q9 3 9 0 9 3 12 3 9 3 9 6 9 3 6 3M6 9a1 1 0 006 0h-1a1 1 0 01-4 0zM6 6A1 1 0 0012 6H11A1 1 0 017 6ZM3 11A1 1 0 003 7 1 1 0 003 11"/>
                <text x="-0.5" y="17.5" class="fill-yellow italic font-black text-[6px]">ART</text>
                <text x="-0.5" y="23" class="fill-yellow italic font-black text-[6px]">ART</text>
                <text x="-0.5" y="28.5" class="fill-yellow italic font-black text-[6px]">ART</text>
            </svg>
        </a>
        <a
            class="p-6 group block col-span-2 row-span-2 bg-[#500818] relative max-sm:row-start-7"
            href="/password-generator/"
        >
            <h3 class="font-bold text-4xl mb-2 text-white">Password Generator</h3>
            <p class="text-shade-200 text-lg">You need a password?</p>
            <LinkFollow/>
        </a>
        <a
            href="/trees/"
            class="overflow-hidden min-h-full row-span-2"
        >
            <Image
                src={TreesPicture}
                alt=""
                height={230}
                densities={[0.25, 0.5, 1, 2, 3, 4, 5]}
                quality={100}
                class={"h-full object-cover w-full"}
            />
        </a>
    </section>
</Page>